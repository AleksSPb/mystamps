<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	
	<!-- See also src/main/webapp/WEB-INF/web.xml for primary configuration -->
	
	<context-param>
		<param-name>spring.profiles.active</param-name>
		<param-value>test</param-value>
	</context-param>
	
	<!--
		Web console for managing H2 database.
		
		Access it via http://127.0.0.1:8081/console and use "org.h2.Driver" as the driver,
		"jdbc:h2:mem:mystamps" as the URL, "sa" as the username and a blank password.
	-->
	<servlet>
		<servlet-name>H2Console</servlet-name>
		<servlet-class>org.h2.server.web.WebServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>H2Console</servlet-name>
		<!-- See also src/main/java/ru/mystamps/web/support/spring/security/SecurityConfig.java -->
		<url-pattern>/console/*</url-pattern>
	</servlet-mapping>
	
	<!--
		Servlet allow to see the configured log4j loggers and change their level at runtime.
		@see http://openutils.sourceforge.net/openutils-log4j/servlet.html
	-->
	<servlet>
		<servlet-name>Log4jConsole</servlet-name>
		<servlet-class>it.openutils.log4j.Log4jConfigurationServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Log4jConsole</servlet-name>
		<url-pattern>/logger</url-pattern>
	</servlet-mapping>
	
</web-app>
