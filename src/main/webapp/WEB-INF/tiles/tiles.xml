		<put-attribute name="footer" value="/WEB-INF/tiles/footer/default.jsp" />
	</definition>
	
	<!-- Pages -->
	
	<definition name="site/index" extends="defaultTemplate">
		<put-attribute name="title" value="t_index_title" />
