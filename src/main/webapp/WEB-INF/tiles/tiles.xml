	<definition name="error/401" extends="errorTemplate">
		<put-attribute name="title" value="t_401_title" />
		<put-attribute name="errorCode" value="401" />
		<put-attribute name="errorDescription" value="t_401_description" />
	</definition>
	
	<definition name="error/404" extends="errorTemplate">
		<put-attribute name="title" value="t_404_title" />
