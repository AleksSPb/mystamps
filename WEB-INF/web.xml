<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.jsf</url-pattern>
	</servlet-mapping>
	
	<!-- http://www.i-coding.de/www/en/jsf/application/unicode-escaping.html -->
	<context-param>
		<param-name>com.sun.faces.disableUnicodeEscaping</param-name>
		<param-value>true</param-value>
	</context-param>
	
	<!-- http://forums.oracle.com/forums/thread.jspa?threadID=911915 -->
	<context-param>
		<param-name>com.sun.faces.sendPoweredByHeader</param-name>
		<param-value>false</param-value>
	</context-param>
	
	<context-param>
		<param-name>LOGIN_MIN_LENGTH</param-name>
		<param-value>2</param-value>
	</context-param>
	
	<context-param>
		<param-name>LOGIN_MAX_LENGTH</param-name>
		<param-value>15</param-value>
	</context-param>
	
	<context-param>
		<param-name>PASSWORD_MIN_LENGTH</param-name>
		<param-value>4</param-value>
	</context-param>
	
	<context-param>
		<param-name>EMAIL_MAX_LENGTH</param-name>
		<param-value>255</param-value>
	</context-param>
	
	<context-param>
		<param-name>NAME_MAX_LENGTH</param-name>
		<param-value>100</param-value>
	</context-param>
	
	<context-param>
		<param-name>ACT_KEY_LENGTH</param-name>
		<param-value>10</param-value>
	</context-param>
	
	<error-page>
		<error-code>404</error-code>
		<location>/404.jsf</location>
	</error-page>
	
	<filter>
		<filter-name>MaintenanceFilter</filter-name>
		<filter-class>ru.mystamps.site.filters.MaintenanceFilter</filter-class>
		<init-param>
			<param-name>enableMaintainanceMode</param-name>
			<param-value>no</param-value>
		</init-param>
		<init-param>
			<param-name>allowedIP</param-name>
			<param-value>127.0.0.1</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>MaintenanceFilter</filter-name>
		<url-pattern>*.jsf</url-pattern>
	</filter-mapping>
	
	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/mystamps</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	
</web-app>
